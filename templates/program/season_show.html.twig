{# templates/program/season_show.html.twig #}
{% extends "base.html.twig" %}
{% block title %}{{ program.title }} Season {{season.number}}{% endblock %}

{% block body %}
<div class="media">

  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

  <div class="media-body">

    <h1 class="mt-0">{{ program.title }}</h1>

    <h2 class="mt0">Season {{ season.number}} </h2>

    <p>{{ season.description }}</p>

  </div>

  {% for episode in episodes %}

  <div class="media-body">

    <a href="#" class="mt-0">Episode {{ episode.number }} : 
    {{ episode.synopsis }}</a>

  </div>

  {% endfor %}

</div>


<a href="{{ "/programs/" }}">

    Retour Ã  la liste des programmes

</a>

{% endblock %}